<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listando Administradores</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th class="text-center" >ID</th>
              <th class="text-center" >E-mail</th>
              <th class="text-center" >
                  <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle" do %>
                    <i class="fa fa-plus"></i>
                  <% end %>
              </th>
          </tr>
      </thead>
      <tbody>
          <% @admins.each do |admin| %>
            <tr>
                <td class="text-center" ><%= admin.id %></td>
                <td><%= admin.email %></td>
                <td class="text-center" style="width: 100px"> 
                  <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>

                  <button type="button" class="btn btn-danger btn-circle">
                    <i class="fa fa-minus"></i>
                  </button>
                </td>
            </tr>
          <% end %>
      </tbody>
  </table>
</div>
